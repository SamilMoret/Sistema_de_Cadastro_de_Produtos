<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.1"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd">
    <persistence-unit name="produtos-pu" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>br.com.fiap.produtos.model.Produto</class>
        <class>br.com.fiap.produtos.model.Categoria</class>
        <properties>
            <!-- Configuração do dialeto (removido pois será configurado via properties) -->
            
            <!-- Validação do esquema -->
            <property name="jakarta.persistence.schema-generation.database.action" value="validate"/>
            
            <!-- Configurações de logging -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            
            <!-- Configuração do HikariCP -->
            <property name="hibernate.hikari.connectionTimeout" value="20000"/>
            <property name="hibernate.hikari.minimumIdle" value="10"/>
            <property name="hibernate.hikari.maximumPoolSize" value="20"/>
            <property name="hibernate.hikari.idleTimeout" value="300000"/>
            <property name="hibernate.hikari.maxLifetime" value="1200000"/>
            <property name="hibernate.hikari.autoCommit" value="false"/>
        </properties>
    </persistence-unit>
</persistence>
